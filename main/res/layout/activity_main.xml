<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262A34"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/jumpDude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="403dp"
        android:translationZ="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jump" />

    <Button
        android:id="@+id/jumpForce"
        android:layout_width="151dp"
        android:layout_height="136dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="394dp"
        android:background="@drawable/rounded_button"
        android:text="\n\n\n\n\nJump Force"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/balanceDude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="277dp"
        android:layout_marginTop="403dp"
        android:translationZ="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/balance" />

    <Button
        android:id="@+id/balanceTest"
        android:layout_width="151dp"
        android:layout_height="136dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="394dp"
        android:background="@drawable/rounded_button"
        android:text="\n\n\n\n\n\Balance Forces"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/blackBox"
        android:layout_width="262dp"
        android:layout_height="186dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="51dp"
        android:background="#1C1616"
        android:text="\nTMP Force Plate"
        android:textAlignment="center"
        android:textColor="#67C7FF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="310dp"
        android:text="Select a force you would like to test:"
        android:textColor="#67C7FF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="378dp"
        android:layout_height="36dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="679dp"
        android:text="Terms of Service \t\t\t\t About Us \t\t\t\t Contact Us"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>